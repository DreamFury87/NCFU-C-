#include <iostream>
using namespace std;

int main(){
    int a, b;
    cout << "Enter two integer numbers: \n";
    cin >> a >> b;
    int *pa = &a;
    int *pb = &b;

    if(*pa > *pb){
        *pa *= 5;
        *pb -= 5;
    }else{
        *pb *= 5;
        *pa -= 5;
    }
    cout << "a: " << *pa << endl;
    cout << "b: " << *pb << endl;
    return 0;
}
